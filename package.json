{
  "name": "zcoin-client",
  "version": "0.0.1",
  "author": "Jörn Röder <kontakt@joernroeder.de>",
  "description": "Official Zcoin Client",
  "license": null,
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "clear; DEBUG=zcoin:* node .electron-vue/dev-runner.js",
    "translate": "clear; SHOW_TRANSLATIONS=1 DEBUG=zcoin:* node .electron-vue/dev-runner.js",
    "e2e": "npm run pack && mocha test/e2e",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src test",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src test",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "test": "npm run unit && npm run e2e",
    "unit": "karma start test/unit/karma.conf.js",
    "utils:rebuild-zeromq": "VERSION=$(echo $npm_package_devDependencies_electron | sed 's/\\^//g'); npm rebuild zeromq --runtime=electron --target=${VERSION}",
    "postinstall": "npm run utils:rebuild-zeromq; npm run lint:fix",
    "electron-toolkit": "electron ./node_modules/electron-toolkit"
  },
  "build": {
    "productName": "Zcoin",
    "appId": "com.zcoin.client",
    "asar": true,
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "dist/electron/**/*",
      "assets/core/**/*"
    ],
    "asarUnpack": [
      "**/assets/core/*"
    ],
    "dmg": {
      "background": "assets/images/background.png",
      "iconSize": 120,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "icon": "assets/icons"
    }
  },
  "dependencies": {
    "big.js": "^5.1.2",
    "bs58": "^4.0.1",
    "debug": "^3.1.0",
    "js-yaml": "^3.12.0",
    "lato-font": "^3.0.0",
    "lodash": "^4.17.10",
    "normalize-scss": "^7.0.1",
    "ps-tree": "^1.1.0",
    "sha.js": "^2.4.11",
    "typesettings": "^4.0.0",
    "url-parse": "^1.4.3",
    "v-tooltip": "^2.0.0-rc.33",
    "vee-validate": "^2.1.0-beta.8",
    "vue": "^2.5.17",
    "vue-electron": "^1.0.6",
    "vue-i18n": "^8.0.0",
    "vue-lottie": "^0.2.1",
    "vue-qrcode-component": "^2.1.1",
    "vue-radial-progress": "^0.2.10",
    "vue-router": "^3.0.1",
    "vue-smooth-reflow": "^0.1.6",
    "vue-timeago": "^5.0.0",
    "vuetable-2": "^2.0.0-beta.3",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "zeromq": "^4.6.0"
  },
  "devDependencies": {
    "ajv": "^6.5.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^2.1.3",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "date-fns": "^1.29.0",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.3",
    "electron-debug": "^2.0.0",
    "electron-toolkit": "^1.0.24",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "json-loader": "^0.5.7",
    "karma": "^3.0.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.2",
    "karma-electron": "^6.0.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^3.0.0",
    "mini-css-extract-plugin": "0.4.1",
    "mocha": "^5.2.0",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.9.3",
    "require-dir": "^1.0.0",
    "sass-loader": "^7.1.0",
    "spectron": "^3.8.0",
    "style-loader": "^0.22.1",
    "url-loader": "^1.1.1",
    "vue-devtools": "^4.1.4",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.4.1",
    "vue-style-loader": "^4.1.2",
    "vue-svg-loader": "^0.5.0",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-merge": "^4.1.4",
    "yaml-loader": "^0.5.0"
  }
}
